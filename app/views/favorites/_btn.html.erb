<% if current_user %>
  <% if article.favorited_by?(current_user) %>
    <%= link_to article_favorites_path(article), data: { "turbo-method": :delete } do %>
      ♥ <%= article.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to article_favorites_path(article), data: { "turbo-method": :post } do %>
      ♡ <%= article.favorites.count %>
    <% end %>
  <% end %>
<% else %>
  ♡ <%= article.favorites.count %>
<% end %>
